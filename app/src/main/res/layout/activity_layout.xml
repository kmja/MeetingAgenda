<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityActivity"
    android:background="#e6e6dc"
    android:id="@+id/activity_layout">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:padding="16dp"
        android:background="#00628b"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Activity"
            android:id="@+id/textView"
            android:inputType="none"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:elegantTextHeight="false"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout5"
        android:layout_alignParentLeft="false"
        android:baselineAligned="false"
        android:layout_alignParentBottom="true"
        android:weightSum="1.0"
        android:layout_alignParentTop="false">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            android:text="Cancel"
            android:id="@+id/button"
            android:singleLine="false"
            android:background="#eb7260"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="18dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            android:text="Save"
            android:id="@+id/button2"
            android:background="#29aba4"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:id="@+id/linearLayout2"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:layout_weight="1"
                android:text=""
                android:hint="Name"
                android:textColor="#000000"
                android:inputType="text"
                android:textSize="18dp"
                android:backgroundTint="#000000"
                android:maxLength="50"
                android:lines="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:id="@+id/linearLayout3"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText2"
                android:layout_weight="1"
                android:hint="Length"
                android:text=""
                android:textColor="#000000"
                android:layout_marginRight="20dp"
                android:textSize="18dp"
                android:backgroundTint="#000000"
                android:inputType="number"
                android:maxLength="3"
                android:lines="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="min"
                android:id="@+id/textView2"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textIsSelectable="false"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout4"
            android:layout_below="@+id/linearLayout3"
            android:layout_marginTop="20dp"
            android:weightSum="1"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="23.45"
                android:id="@+id/radioGroup">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/linearLayout6">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Presentation"
                            android:id="@+id/radioButton1"
                            android:textColor="#000000"
                            android:textSize="18dp"
                            android:layout_marginBottom="10dp"
                            android:buttonTint="#00628b"
                            android:checked="false"
                            android:contentDescription="1" />

                        <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Group Work"
                        android:id="@+id/radioButton3"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:buttonTint="#29aba4"
                        android:contentDescription="2" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/linearLayout6"
                        android:layout_toEndOf="@+id/linearLayout6">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Discussion"
                            android:id="@+id/radioButton2"
                            android:textColor="#000000"
                            android:textSize="18dp"
                            android:buttonTint="#eb7260"
                            android:contentDescription="3"
                            android:layout_marginBottom="10dp" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Break"
                            android:id="@+id/radioButton4"
                            android:textColor="#000000"
                            android:textSize="18dp"
                            android:buttonTint="#3a9ad9"
                            android:contentDescription="4" />

                    </LinearLayout>

                </RelativeLayout>

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout5"
            android:layout_marginTop="20dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText3"
                android:hint="Description"
                android:text=""
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:backgroundTint="#000000"
                android:maxLength="150"
                android:lines="5" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
